{
  "name": "viz-ebola-dashboard",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/OCHA-DAP/viz-ebola-dashboard",
  "main": " ",
  "scripts": {
    "start": "node server",
    "scss": "node-sass -o public/css src/scss/styles.scss",
    "watch:css": "onchange 'src/scss/*.scss' -- npm run build:css",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "watch": "npm-run-all --parallel watch:*",
    "concat:js": "concat -o public/js/bundle.js ./app.js src/js/*.js",
    "build:css": "mkdir -p public/css && npm run scss",
    "build:js": "npm run concat:js && browserify -t browserify-css public/js/bundle.js | uglifyjs > public/js/bundle.min.js",
    "build": "npm-run-all --parallel build:*"
  },
  "author": "Erika Wei & Amadu Ndong",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "browserify": "^16.2.3",
    "browserify-css": "^0.15.0",
    "concat": "^1.0.3",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "gh-pages": "^2.2.0",
    "http-server": "^0.12.1",
    "jquery": "^3.4.1",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "uglify-es": "^3.3.9"
  },
  "devDependencies": {}
}
